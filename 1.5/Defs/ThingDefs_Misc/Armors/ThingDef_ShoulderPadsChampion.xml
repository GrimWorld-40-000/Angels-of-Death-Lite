<Defs>

	<!-- Dark Angel -->
	
	<ThingDef Name="GW_CM_DarkAngelShoulder_Base" ParentName="HP_AoD_ShoulderBase">
		<defName>GW_SM_DarkAngelsShoulderPadsModelA_DA</defName>
		<label>dark angel shoulder pads (a)</label>
		<graphicData>
			<texPath>Things/Apparel/DarkAngel/Shoulders/DAGravis_sp_modelA_south</texPath>
		</graphicData>
		<apparel>
			<wornGraphicPath>Things/Apparel/DarkAngel/Shoulders/DAGravis_sp_modelA</wornGraphicPath>
		</apparel>
		<equippedStatOffsets>
			<ToxicEnvironmentResistance>1</ToxicEnvironmentResistance>
			<AimingDelayFactor>-0.2</AimingDelayFactor>
		</equippedStatOffsets>
		<statBases>
			<WorkToMake>25000</WorkToMake>
			<MaxHitPoints>700</MaxHitPoints>
			<Mass>3</Mass>
			<Flammability>0.2</Flammability>
			<ArmorRating_Sharp>1.50</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.10</ArmorRating_Blunt>
			<ArmorRating_Heat>1.0</ArmorRating_Heat>
			<Insulation_Cold>20</Insulation_Cold>
			<Insulation_Heat>20</Insulation_Heat>
			<EquipDelay>2</EquipDelay>
		</statBases>
		<costList>
			<ComponentSpacer>1</ComponentSpacer>
			<Plasteel>100</Plasteel>
			<Steel>50</Steel>
			<Uranium>15</Uranium>
			<HP_Ceramite>10</HP_Ceramite>
		</costList>
        <comps>
            <li Class="GW4KArmor.CompProperties_TriColorMask">
                <maskCount>12</maskCount>
                <palettePresets>GW_SM_ShoulderChapterPalettes</palettePresets>
                <defaultPalette>
                    <colorA>(250, 176, 67)</colorA>
					<colorB>(250, 176, 67)</colorB>
					<colorC>(180, 65, 74)</colorC>
                </defaultPalette>
            </li>
        </comps>
		<recipeMaker>
			<researchPrerequisite>GW_SM_DarkAngels</researchPrerequisite>
		</recipeMaker>
    </ThingDef>

